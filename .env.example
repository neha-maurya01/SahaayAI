# API Configuration
API_VERSION=v1
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URL=sqlite:///./sahaayai.db
# For production: postgresql://user:password@localhost/sahaayai

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-32-bytes-long

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_BUSINESS_ID=your_whatsapp_business_id
WHATSAPP_API_TOKEN=your_whatsapp_token

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sahaayai.log

# Storage
FILE_STORAGE_PATH=./storage
MAX_FILE_SIZE_MB=10

# Supported Languages
SUPPORTED_LANGUAGES=en,hi,bn,ta,te,mr,gu,kn,ml,pa,or,as

# Default Settings
DEFAULT_LANGUAGE=en
DEFAULT_LITERACY_LEVEL=medium

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600

# Privacy
DATA_RETENTION_DAYS=90
ENABLE_ANALYTICS=True
ANONYMIZE_LOGS=True
